<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView android:id="@+id/txt_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_alc_four"
        android:textSize="@dimen/text_size_twenty_five"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <Button
        android:id="@+id/btn_link_to_alc_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_alc"
        android:ems="12"
        android:background="@drawable/button_background"
        android:layout_marginTop="@dimen/eighty_dip_size"
        app:layout_constraintTop_toBottomOf="@+id/txt_page_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button android:id="@+id/btn_link_to_profile"
        android:layout_width="@dimen/view_size_zero"
        android:layout_height="wrap_content"
        android:text="@string/my_profile"
        android:layout_marginTop="@dimen/fifty_dip_size"
        android:background="@drawable/button_background"
        app:layout_constraintRight_toRightOf="@+id/btn_link_to_alc_about"
        app:layout_constraintLeft_toLeftOf="@+id/btn_link_to_alc_about"
        app:layout_constraintTop_toBottomOf="@+id/btn_link_to_alc_about"/>

</androidx.constraintlayout.widget.ConstraintLayout>